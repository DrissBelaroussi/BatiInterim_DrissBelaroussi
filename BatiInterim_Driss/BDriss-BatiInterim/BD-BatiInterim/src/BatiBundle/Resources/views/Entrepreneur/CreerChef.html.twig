{# empty Twig template #}
<!DOCTYPE html>
<html>
    <head>
        <title>Bati-Interim</title>

        {% stylesheets '@BatiBundle/Resources/public/css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %} 
    </head>
    <body>
        
         {{ include("BatiBundle:Template:ConnectedMenuE.html.twig") }}
         
         <h3> Création d'un chef de chantier </h3>

        {#{% if form is defined %}
            {{form(form)}}
        {%endif%}#}
        
        {% if form is defined %}
           
            {{form_start(form)}}

            <table class="tableForm">
                <tr>
                    <td>{{form_label(form.nom)}}</td>      
                    <td>{{form_widget(form.nom)}}</td>
                    <td>{{form_errors(form.nom)}}</td>
                </tr> 
                <tr>
                    <td>{{form_label(form.prenom)}}</td>
                    <td>{{form_widget(form.prenom)}}</td>
                    <td>{{form_errors(form.prenom)}}</td>

                </tr>
                <tr>
                    <td>{{form_label(form.datenaiss)}}</td>
                    <td>{{form_widget(form.datenaiss)}}</td>
                    <td>{{form_errors(form.datenaiss)}}</td>

                </tr>
                <tr>
                    <td>{{form_label(form.lieunaiss)}}</td>
                    <td>{{form_widget(form.lieunaiss)}}</td>
                    <td>{{form_errors(form.lieunaiss)}}</td>

                </tr>
                <tr>
                    <td>{{form_label(form.telephone)}}</td>
                    <td>{{form_widget(form.telephone)}}</td>
                    <td>{{form_errors(form.telephone)}}</td>

                </tr>
                <tr>
                    <td>{{form_label(form.adresse)}}</td>
                    <td>{{form_widget(form.adresse)}}</td>
                    <td>{{form_errors(form.adresse)}}</td>

                </tr>

                <tr>
                    <td>{{form_label(form.cp)}}</td>
                    <td>{{form_widget(form.cp)}}</td>
                    <td>{{form_errors(form.cp)}}</td>

                </tr>
                <tr>
                    <td>{{form_label(form.ville)}}</td>
                    <td>{{form_widget(form.ville)}}</td>
                    <td>{{form_errors(form.ville)}}</td>

                </tr>
                
                <tr>
                    <td>{{form_row(form.valider)}}</td>
                    {#<td class="tdAnnuler">{{form_row(form.annuler)}}</td>#}
                </tr>


            </table>
                
                {{ form_rest(form) }}
                {{form_end(form)}}


        {%endif%}


        <h3> Vos chefs de chantier </h3>

        <table class='table table-bordered'>  
            {% if chefs is defined %}

                <tr>
                    <th>Nom</th> 
                    <th>Prénom</th>
                    <th>Date de naissance</th> 
                    <th>Ville</th>                     
                    <th>N° de téléphone</th>


                </tr>

                {% for unChef in chefs %}
                    <tr>
                        <td>{{unChef.nom}}</td>
                        <td>{{unChef.prenom}}</td>
                        <td>{{unChef.datenaiss | date('d-m-Y')}}</td>
                        <td>{{unChef.ville}}</td> 
                        <td>{{unChef.telephone}}</td>                                             

                    </tr>
                {% endfor %}

            {% endif%}

        </table>

       {# <form  class ="formConnexion" action="{{ path('Connexion') }}" method="post">
            <input type="submit" class="btn btn-default" value="Retour" />
        </form>#}

    </body>
    
